{% extends 'base.html.twig' %}

{% block title %}Hello Home page !{% endblock %}

{% block body %}


    <article>

        <h2>{{article.title}}</h2>
        <div class="metadata">{{article.createdeAt |date('d/m/Y')}} à {{article.createdeAt |date('H:i')}}
            dans la categorie {{ article.category/title }}</div>
        <div class="content">
            <img src="{{article.image}}" alt="">
            <p>{{article.content | raw }}</p>

        </div>
    </article>

    <section id="commentaires">
        {% for comment in article.comments %}
        <div class="comment">
            <div class="row">
                <div class="col-3">
                    {{comment.author}} (<small>{{comment.createdAt | date('d/m/Y à H:i')}}</small>)
                </div>
                <div class="col">
                    {{comment.content | raw}}
                </div>
            </div>
        </div>
    </section>
    {% endfor %}
{% endblock %}